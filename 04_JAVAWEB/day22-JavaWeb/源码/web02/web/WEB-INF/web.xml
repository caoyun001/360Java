<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--
            配置Web程序的初始化参数 标签名
            context-param
        -->
    <context-param>
        <!--参数的键-->
        <param-name>java</param-name>
        <!--参数的值-->
        <param-value>heima</param-value>
    </context-param>

    <servlet>
        <servlet-name>context1</servlet-name>
        <servlet-class>com.itheima.context.Context1Servlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>context1</servlet-name>
        <url-pattern>/context1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>context2</servlet-name>
        <servlet-class>com.itheima.context.Context2Servlet</servlet-class>
    </servlet>
 

    <servlet-mapping>
